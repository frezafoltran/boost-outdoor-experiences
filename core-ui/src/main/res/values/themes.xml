<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Boost" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2F4858</item>
        <item name="colorPrimaryVariant">#4A5680</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F6675E</item>
        <item name="colorSecondaryVariant">#F6931D</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/bg_primary</item>
        <item name="android:navigationBarColor">@color/bg_primary</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:background">@drawable/bg_primary_translucent</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/bg_primary_translucent</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="BaseText" parent="">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeadingLargeDarkBold" parent="BaseText">
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.00735294118</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingSmall" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.00735294118</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingSmallDark" parent="HeadingSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>

    <style name="HeadingMediumDark" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.00735294118</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>

    <style name="HeadingLarge" parent="BaseText">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.00735294118</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ButtonLargeSecondary" parent="BaseText">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.00735294118</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>

    <style name="LabelMediumDark" parent="BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>

    <style name="LabelMedium" parent="BaseText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BodyLarge" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ToolBarTextAppearance" parent="BodyLarge">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelSmallDark" parent="BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>

    <style name="BodyMedium" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@color/bg_primary</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerDropDownItemStyleSmall" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GraphAxisText" parent="BaseText">
        <item name="android:textSize">12sp</item>
    </style>

</resources>